@page
@model Inventory_Management.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].AssetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].PurchasedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].DiscardedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].AssignedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].LastReturnedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asset[0].AssetType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Asset) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscardedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastReturnedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetType.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
