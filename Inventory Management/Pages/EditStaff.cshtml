@page
@model Inventory_Management.Pages.EditStaffModel

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.Id" />
            <div class="form-group">
                <label asp-for="Staff.StaffNumber" class="control-label"></label>
                <input asp-for="Staff.StaffNumber" class="form-control" />
                <span asp-validation-for="Staff.StaffNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.NationalIdentificationNumber" class="control-label"></label>
                <input asp-for="Staff.NationalIdentificationNumber" class="form-control" />
                <span asp-validation-for="Staff.NationalIdentificationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Name" class="control-label"></label>
                <input asp-for="Staff.Name" class="form-control" />
                <span asp-validation-for="Staff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.DepartmentId" class="control-label"></label>
                <select asp-for="Staff.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Staff.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
