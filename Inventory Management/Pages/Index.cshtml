@page
@model Inventory_Management.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col"><h3>Assets</h3></div>
    <div class="d-flex col justify-content-end">
        <p>
            <a asp-page="CreateAsset" class="btn btn-primary">Create New</a>
        </p>
    </div>
</div>

@foreach (var item in Model.Asset) {
        <div class="row mb-3">
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.AssetNumber)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.Status)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.PurchasedDate)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.DiscardedDate)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.LastReturnedDate)
            </div>
            <div class="d-flex col">
                @Html.DisplayFor(modelItem => item.AssetType.Name)
            </div>
            <div class="d-flex col">
                <a class="btn btn-primary" asp-page="./EditAsset" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary" asp-page="./AssetDetails" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary" asp-page="./DiscardAsset" asp-route-id="@item.Id">Discard</a>
            </div>
        </div>
}
